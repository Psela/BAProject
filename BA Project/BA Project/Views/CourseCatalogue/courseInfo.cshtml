@model List<DatabaseModel.user>
<h2 id="courseInfotitle">Course Information</h2>
@using (Html.BeginForm("AddNewCourse", "CourseCatalogue"))
{
  <table id="tableInfo" class="table table-bordered table-hover" align="center">
    <thead>
      <tr>
        <th>Course Name</th>
        <th>Course Outline</th>
        <th>Lecturer</th>
        <th>Course Start Date</th>
        <th>Course End Date</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><input type="text" name="name" /></td>
        <td><input type="text" name="outline" /></td>
        <td>
          <select name="lecturer">
            @foreach (var item in Model)
            {
              <option value="@item.users_id">@item.full_name</option>
            }
          </select>
        </td>
        <td><input type="date" name="startdate" /></td>
        <td><input type="date" name="enddate" /></td>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <div class="col-lg-12">
      <a><input type="submit" value="Add course" id="buttonrow" /></a>
    </div>
  </div>
}
@Styles.Render("~/Content/CourseInfo.css")