@model Dictionary<string, string>

@section scripts{
  <style type="text/css">
    #update {
        top:auto;
        width: 100px;
        height: 50px;
      }
    #grade
    {
        text-align:center;
    }
  </style>
}
<h2><a>@ViewBag.courseName</a></h2>

<table align="center" class="table table-hover">
  <thead>
    <tr>
      <th>Student Name</th>
      <th>Grade</th>
    </tr>
  </thead>
  <tbody>
    @using (Html.BeginForm("UpdateGrade", "ReportCard"))
    {
      foreach (var item in Model)
      {
        <tr>
          <td>@item.Key</td>
          <td><input type="text" value="@item.Value" name="grade" id="grade" size="1"/></td>
        </tr>
      }
      <tr>
        <td colspan="2">
          <input type="submit" value="Update" id="update" />
        </td>
      </tr>
    }
  </tbody>
</table>
