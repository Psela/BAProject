@model DatabaseModel.user

<br/>
<br/>
<div class="row">
  <div class="col-lg-6" id="pictureContainer">
    <center>
      <img src=@Model.profile_picture />
    </center>
  </div>
  <div class="col-lg-6" id="nameContainer">
    <p id="lecName">@Model.full_name </p>
  </div>
</div>
<br/>
<br/>
<div class="row">
  <div class="col-lg-12">
    <table align="center" width="500" cellspacing="3">
      <tr>
        <th colspan="2" class="well well-sm" style="font-size:larger;">Contact Details</th>
      </tr>
      <tr>
        <td>Email Address: </td>
        <td name="email">@Model.email</td>
      </tr>
      <tr>
        <td>Office: </td>
        <td>@Model.office</td>
      </tr>
      <tr>
        <td>Phone Number: </td>
        <td name="phone">@(0+Model.phone_number)</td>
      </tr>
    </table>
  </div>
</div>

@section scripts
    {
  <style type="text/css">
      table {
        border-spacing: 20px;
        border-collapse: separate;
   
      }

      #pictureContainer{
          padding-left:350px;
      }

      #nameContainer{
          padding-top:50px;
          padding-right: 80px;

      }

      #lecName {
        font-size: 30px;
        color: #66B2FF;
      }
  </style>
}